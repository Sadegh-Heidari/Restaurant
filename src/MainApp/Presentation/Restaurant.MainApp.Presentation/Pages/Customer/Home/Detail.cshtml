@page "{food}"
@model Restaurant.MainApp.Presentation.Pages.Customer.Home.DetailModel
<div class="">
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header">
                <div class="text-light ml-0 row ">
                    <div class="col-12 col-md-6 pt-2">
                        <h1 class="text-primary">@Model.cart.Name</h1>
                    </div>
                    <div class="col-12 col-md-6 text-end pt-2">
                        <h1 class="text-muted">$@Model.cart.Price</h1>
                    </div>
                </div>
            </div>
            <form method="post">
                <input type="hidden" asp-for="@Model.cart.Name"/>
                <input type="hidden" asp-for="@Model.cart.Price"/>
                <input type="hidden" asp-for="@Model.cart.Description"/>
                <input type="hidden" asp-for="@Model.cart.CategoryName"/>
                <input type="hidden" asp-for="@Model.cart.FoodTypeName"/>
                <input type="hidden" asp-for="@Model.cart.Image"/>
                <div class="card-body">
                    <div class="container rounded p-2">

                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <span class="badge bg-warning p-3 h3">@Model.cart.CategoryName</span>
                                        <span class="badge bg-dark p-3">@Model.cart.FoodTypeName</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.cart.Description)</p>

                                        <input type="hidden" asp-for="cart.id"/>
                                        <div class="form-floating my-2">
                                            <input class="form-control" asp-for="cart.Count"/>
                                            <label>@nameof(Model.cart.Count)</label>
                                            <span asp-validation-for="cart.Count" class="mt-2 text-danger"></span>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="~/@Model.cart.Image" width="100%" class="rounded"/>
                            </div>


                        </div>

                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="./Index" class="btn btn-success btn-square form-control" style="height: 50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height: 50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

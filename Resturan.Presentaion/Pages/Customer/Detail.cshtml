@page "{food}"
@model Resturan.Presentation.Pages.Customer.DetailModel
<div class="">
        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row ">
                        <div class="col-12 col-md-6 pt-2">
                            <h1 class="text-primary">@Model.cust.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-end pt-2">
                            <h1 class="text-muted">$@Model.cust.Price</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <span class="badge bg-warning p-3 h3">@Model.cust.CategoryName</span>
                                        <span class="badge bg-dark p-3">@Model.cust.FoodTypeName</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.cust.Description)</p>
                                        <form method="post">
                                            <input type="hidden" asp-for="cust.id"/>
                                            <div class="form-floating my-2">
                                                <input class="form-control" asp-for="cust.Count"/>
                                                <label>@nameof(Model.cust.Count)</label>
                                                <span asp-validation-for="cust.Count" class="mt-2 text-danger"></span>
                                            </div>
                                        </form>
                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="/@Model.cust.Image" width="100%" class="rounded"/>
                            </div>


                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a asp-page="./Index" class="btn btn-success btn-square form-control" style="height: 50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button onclick="sub()" class="btn btn-primary btn-square form-control" style="height: 50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
</div>
@section Scripts
{
    @*  <partial name="Shared/_ValidationScriptsPartial"/>*@
    <script>
        function sub(parameters) {
            var form = document.querySelector('form');
            form.submit();
        }
    </script>
}

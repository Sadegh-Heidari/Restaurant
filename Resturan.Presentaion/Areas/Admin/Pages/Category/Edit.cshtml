@page "{Id}"
@model Resturan.Presentation.Areas.Admin.Pages.Category.EditModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">
        
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <input type="hidden" asp-for="Editmodel.Id" />
            <label asp-for="Editmodel.Name"></label>
            <input asp-for="Editmodel.Name" class="form-control"/>
            <span asp-validation-for="Editmodel.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Editmodel.DisplayOrder"></label>
            <input asp-for="Editmodel.DisplayOrder" class="form-control"/>
            <span asp-validation-for="Editmodel.DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 150px;">Update</button>
        <a asp-page="Index" class="btn btn-secondary" style="width: 150px;"> Back to List</a>
    </div>
	
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
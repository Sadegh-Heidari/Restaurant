@page "{id}"
@model UpdateModel
@{
}
@section cdn
    {
    <script src="https://cdn.tiny.cloud/1/panb6ftdvct6jm6dz3wyui8cgggvl8j0gdaetrl3hofvn41q/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

}
    <form method="post" enctype="multipart/form-data">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <div class="col-9">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h2 class="text-primary pl-3">
                        Update Menu Item
                    </h2>
                    <hr />
                    <div class="mb-3">
                        <input type="hidden" asp-for="UpdateView.Id"/>
                        <label asp-for="UpdateView.Name"></label>
                        <input asp-for="UpdateView.Name" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UpdateView.Price"></label>
                        <input asp-for="UpdateView.Price" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="UpdateView.Image"></label>
                        <input onchange="ShowImg()" asp-for="UpdateView.Image" class="form-control" type="file" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="UpdateView.CategoryId"></label>
                        <select asp-for="UpdateView.CategoryId" asp-items="Model.UpdateView.CategorySelectItems" class="form-select">
                            <option disabled selected>-Select Category-</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UpdateView.FoodTypeId"></label>
                        <select asp-for="UpdateView.FoodTypeId" asp-items="Model.UpdateView.FoodTypeSelectItems" class="form-select">
                            <option disabled selected>-Select Food Type-</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="UpdateView.Description"></label>
                        <textarea asp-for="UpdateView.Description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="col-3">
                    <img src="~/@Model.UpdateView.ImagePath" width="100%" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back to List</a>
        </div>
    </form>
    @section Scripts
    {
    <script src="~/js/site.js"></script>
    <script src="~/js/TinyRichBox.js"></script>
    <partial name="Shared/_ValidationScriptsPartial" />
    <script src="~/js/CustomValidation.js"></script>
}
@page
@model Resturan.Presentation.Areas.Admin.Pages.Menu.CreatModel
@{
}
@section cdn
    {
    <script src="https://cdn.tiny.cloud/1/em5s8okww3owmuw2lu9lxrak4jbfdpzqmbai3zn8syfbgwal/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>


    <form method="post" enctype="multipart/form-data">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <div class="col-9">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h2 class="text-primary pl-3">
                        Creat Menu Item
                    </h2>
                    <hr />
                    <div class="mb-3">
                        <label asp-for="CreatView.Name"></label>
                        <input asp-for="CreatView.Name" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreatView.Price"></label>
                        <input asp-for="CreatView.Price" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreatView.Image"></label>
                        <input  asp-for="CreatView.Image" class="form-control" type="file" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreatView.CategoryId"></label>
                        <select asp-for="CreatView.CategoryId" asp-items="Model.CreatView.CategorySelectItems" class="form-select">
                            <option disabled selected>-Select Category-</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreatView.FoodTypeId"></label>
                        <select asp-for="CreatView.FoodTypeId" asp-items="Model.CreatView.FoodTypeSelectItems" class="form-select">
                            <option disabled selected>-Select Food Type-</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreatView.Description"></label>
                        <textarea asp-for="CreatView.Description" class="form-control"></textarea>
                    </div>
                </div>
                <div class="col-3">
@*                    <input type="hidden" asp-for="@Model.CreatView.Base64Img"/>
*@                    <img  src="~/@Model.CreatView.ImagePath" width="100%"/>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px;"> Back to List</a>
        </div>
    </form>
    @section Scripts
    {
        <script src="~/js/site.js"></script>
@*    <script src="~/js/TinyRichBox.js"></script>
    <partial name="Shared/_ValidationScriptsPartial" />
    <script src="~/js/CustomValidation.js"></script>*@
}

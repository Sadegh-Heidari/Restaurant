@page "{id}"
@model Resturan.Presentation.Areas.Admin.Pages.FoodType.EditModel
@{
}
<form method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
